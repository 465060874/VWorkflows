<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.mihosoft.vrl.workflow.demo.MainWindowFXMLController">
   <children>
    <MenuBar style="-fx-font-size: 13px">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#onGenerateAction" text="Generate" />
            <MenuItem mnemonicParsing="false" onAction="#onLoadAction" text="Load" />
            <MenuItem mnemonicParsing="false" onAction="#onSaveAction" text="Save" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <Menu mnemonicParsing="false" text="Layout">
                <MenuItem mnemonicParsing="false" onAction="#onNaiveAction" text="Naive Algorithm" />
                <Menu mnemonicParsing="false" text="Jung Algorithms">
                    <MenuItem mnemonicParsing="false" onAction="#onJungCircleAction" text="Circle Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungDAGAction" text="DAG Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungFRAction" text="FR Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungFR2Action" text="FR2 Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungISOMAction" text="ISOM Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungKKAction" text="KK Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungSpringAction" text="Spring Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungSpring2Action" text="Spring2 Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onJungStaticAction" text="Static Layout" />
                </Menu>
                <Menu mnemonicParsing="false" text="Prefuse Algortihms">
                    <MenuItem mnemonicParsing="false" onAction="#onPrefCircleAction" text="Circle Layout" />
                    <!-- <MenuItem mnemonicParsing="false" onAction="#onPrefCollapsedStackAction" text="Collapsed Stack Layout" /> -->
                    <MenuItem mnemonicParsing="false" onAction="#onPrefCollapsedSubtreeAction" text="Collapsed Subtree Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefBalloonTreeAction" text="Balloon Tree Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefForceDirectedAction" text="Force Directed Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefFruchtermanReingoldAction" text="Fruchterman Reingold Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefNodeLinkTreeAction" text="Node Link Tree Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefRadialTreeAction" text="Radial Tree Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onPrefSquarifiedTreeMapAction" text="Squarified Tree Map Layout" />
                    <!-- <MenuItem mnemonicParsing="false" onAction="#onPrefGridAction" text="Grid Layout" /> -->
                    <MenuItem mnemonicParsing="false" onAction="#onPrefRandomAction" text="Random Layout" />
                </Menu>
                <Menu mnemonicParsing="false" text="Smart Layout">
                    <MenuItem mnemonicParsing="false" onAction="#onSmartKKAction" text="1. Only KK Layout" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartRotateAction" text="2. Rotation" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartOriginAction" text="3. Origin" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartPushBackAction" text="4. Push Back" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartForcePushOldAction" text="5. Old Force Push" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartForcePushLazyAction" text="5. Lazy Force Push" />
                    <MenuItem mnemonicParsing="false" onAction="#onSmartForcePushNewAction" text="5. New Force Push" />
                </Menu>
                <CheckMenuItem fx:id="checkDebugLayout" mnemonicParsing="false" text="Debugging" />
            </Menu>
            <MenuItem mnemonicParsing="false" text="Delete" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <StackPane fx:id="contentPane" stylesheets="@../fx/default.css" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
